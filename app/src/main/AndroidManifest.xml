<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jyotirmay.utilities">

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <uses-feature android:name="android.hardware.Camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".Main2Activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CALCActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Stopwatch_Activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".FlashLightActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".AlarmActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".NotePadActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".todo.TODOActivity"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>