<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
android:background="@drawable/custom_etba"
    tools:context="com.example.jyotirmay.utilities.todo.TODOActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pick date"
        android:id="@+id/btn_date"
        android:textColor="@color/white"
        android:background="@drawable/custom_et4"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:layout_toRightOf="@+id/btn_date"
        android:shadowColor="@color/black"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:id="@+id/tv_date"
        android:layout_toLeftOf="@+id/btn_add"
        android:layout_marginTop="20dp"
        android:layout_alignBottom="@+id/btn_date" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_task"
        android:hint="Enter Task"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
         />
    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_addTask"
        android:text="ADD"
        android:textStyle="bold"
        android:background="@drawable/custom_et3"
        android:layout_above="@+id/lv_task"
       android:layout_alignParentEnd="true" />


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_task"
        android:layout_marginTop="20dp"

        android:layout_marginBottom="40dp"
        android:layout_below="@id/tv_date"></ListView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Delete All"
        android:id="@+id/btn_delete"
        android:textColor="@color/white"
        android:background="@drawable/custom_et4"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
